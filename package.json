{
  "name": "cv_gen",
  "version": "1.0.0",
  "description": "Sistema de gestion para curriculums",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm link logger",
    "start": "node dist/",
    "build": "npm run build:ts && npm run build:css && npm run copy",
    "build:ts": "npm run lint && tsc",
    "build:css": "sass --no-source-map src/public/style.scss:dist/public/style.css --style compressed",
    "copy": "copyfiles -u 1 src/**/* -e '**/*.ts' -e '**/*.scss' dist/",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .ts src/"
  },
  "author": "LuisPFdez",
  "license": "MIT",
  "dependencies": {
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/mysql": "^2.15.20",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.5.0",
    "sass": "^1.45.1",
    "typescript": "^4.5.4"
  }
}
