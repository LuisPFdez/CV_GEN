{
  "name": "cv_gen",
  "version": "1.0.0",
  "description": "Sistema de gestion para curriculums",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm link logger",
    "start": "node dist/",
    "debug": "node --inspect dist/",
    "build": "npm run build:ts && npm run build:css && npm run copy",
    "build:ts": "npm run lint && tsc",
    "build:css": "sass --no-source-map src/public/:dist/public/ --style compressed",
    "copy": "copyfiles -u 1 'src/**/*' -e '**/*.ts' -e '**/*.scss' dist/",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .ts src/"
  },
  "author": "LuisPFdez",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.2.3",
    "bootstrap-icons": "^1.10.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "highlight.js": "^11.4.0",
    "jsonwebtoken": "^9.0.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/mysql": "^2.15.21",
    "@types/node": "^18.15.7",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.36.0",
    "sass": "^1.60.0",
    "typescript": "^5.0.2"
  }
}
